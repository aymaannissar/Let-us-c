#include <stdio.h>
#include <stdlib.h>

int main()
{
    int *arr, n1, n2, i;

    // Read initial size
    printf("Enter initial size n1: ");
    scanf("%d", &n1);

    // Allocate memory dynamically
    arr = (int *)malloc(n1 * sizeof(int));

    if (arr == NULL)
    {
        printf("Memory allocation failed\n");
        return 0;
    }

    // Read n1 values
    printf("Enter %d elements:\n", n1);
    for (i = 0; i < n1; i++)
        scanf("%d", &arr[i]);

    // Read new size n2
    printf("Enter additional size n2: ");
    scanf("%d", &n2);

    // Reallocate memory
    arr = (int *)realloc(arr, (n1 + n2) * sizeof(int));

    if (arr == NULL)
    {
        printf("Memory reallocation failed\n");
        return 0;
    }

    // Read n2 new values
    printf("Enter %d more elements:\n", n2);
    for (i = n1; i < n1 + n2; i++)
        scanf("%d", &arr[i]);

    // Print all values
    printf("Array elements after expansion:\n");
    for (i = 0; i < n1 + n2; i++)
        printf("%d ", arr[i]);

    // Free memory
    free(arr);

    return 0;
}
