#include <stdio.h>
#include <string.h>
#include <ctype.h>

// Function to count frequency of a character
int charFrequency(char str[], char ch)
{
    int count = 0;
    for(int i = 0; str[i] != '\0'; i++)
    {
        if(str[i] == ch)
            count++;
    }
    return count;
}

// Function to count words using charFrequency logic
int wordCount(char str[])
{
    int count = 0;
    for(int i = 0; str[i] != '\0'; i++)
    {
        if((i == 0 && str[i] != ' ') || (str[i] == ' ' && str[i+1] != ' '))
            count++;
    }
    return count;
}

int main()
{
    char str[200], ch;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Remove newline
    str[strcspn(str, "\n")] = '\0';

    printf("Enter a character to find frequency: ");
    scanf("%c", &ch);

    printf("Frequency of '%c' = %d\n", ch, charFrequency(str, ch));

    printf("Number of words = %d\n", wordCount(str));

    printf("Frequency of each alphabet:\n");
    for(char c = 'a'; c <= 'z'; c++)
    {
        int f = 0;
        for(int i = 0; str[i] != '\0'; i++)
        {
            if(tolower(str[i]) == c)
                f++;
        }
        if(f > 0)
            printf("%c : %d\n", c, f);
    }

    return 0;
}
