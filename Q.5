#include <stdio.h>
#include <string.h>

void printNameFormat(char name[])
{
    int i = 0;

    // Print first name initial
    printf("%c. ", name[0]);

    // Print middle name initial(s)
    for(i = 1; name[i] != '\0'; i++)
    {
        if(name[i] == ' ' && name[i+1] != '\0')
        {
            // Check if next word is last word
            int j = i + 1;
            while(name[j] != '\0' && name[j] != ' ')
                j++;

            if(name[j] == '\0')   // last word
            {
                printf("%s", &name[i+1]);
                return;
            }
            else
            {
                printf("%c. ", name[i+1]);
            }
        }
    }
}

int main()
{
    char name[100];

    printf("Enter full name: ");
    fgets(name, sizeof(name), stdin);

    // Remove newline
    name[strcspn(name, "\n")] = '\0';

    printNameFormat(name);

    return 0;
}
